@model Scarpe___Co.Models.Articolo

@{
    ViewData["Title"] = "Nuovo Articolo";
}

<h1>Nuovo Articolo</h1>

<form asp-action="Nuovo" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo" class="control-label"></label>
        <input asp-for="Prezzo" class="form-control" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione" class="control-label"></label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FileImmagineCopertina" class="control-label"></label>
        <input type="file" asp-for="FileImmagineCopertina" class="form-control-file" />
        <span asp-validation-for="FileImmagineCopertina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FileImmagineAggiuntiva1" class="control-label"></label>
        <input type="file" asp-for="FileImmagineAggiuntiva1" class="form-control-file" />
        <span asp-validation-for="FileImmagineAggiuntiva1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FileImmagineAggiuntiva2" class="control-label"></label>
        <input type="file" asp-for="FileImmagineAggiuntiva2" class="form-control-file" />
        <span asp-validation-for="FileImmagineAggiuntiva2" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Aggiungi</button>
</form>